<view class='container'>
  <loading hidden="{{!loading}}">加载中...</loading>
  <view class='slide'>
    <swiper indicator-dots="{{indicatorDots}}"
      autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
        
        <block wx:for="{{books}}" wx:for-index="index">
          <navigator url='../item/item?id={{item.id}}'> 
            <swiper-item>
              <image src="{{item.cover.url}}" mode="aspectFill"/>
            </swiper-item>
          </navigator> 
        </block>
       
    </swiper>  
  </view>
  <view class='page-body'>
    <text class='title'>发现好图书</text>
    <view class='finds' >

      <block wx:for="{{finds}}" wx:key="index" >
      <navigator url="../item/item?id={{item.id}}" hover-class='none'>
        <text class='description'  style='color:{{colorArr[index]}};border:1px solid {{colorArr[index]}};' >{{item.name}}</text>
      </navigator>
      </block>
      
    </view>
  </view>
</view>

